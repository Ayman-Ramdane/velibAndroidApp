<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Velib" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorSecondary">@color/actionBarColorDark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/statusBarDark</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="actionBarTheme">@style/Theme.ActionBar</item>
        <item name="autoCompleteTextViewStyle">@style/SearchBar</item>
    </style>

    <!--    Style Floating Buttons-->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!--    Style toolbar-->
    <style name="Theme.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/actionBarColorDark</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!--    Style SearchBar-->
    <style name="SearchBar" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/textSearchLight</item>
        <item name="android:background">@color/backgroundDark</item>
        <item name="android:foregroundTint">@color/textSearchLight</item>
    </style>

</resources>